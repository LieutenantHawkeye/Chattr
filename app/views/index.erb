  </div><!-- /.container-fluid -->
  </nav>





  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h1 align="center">Chums</h1>
        <div class="list-group">
          <a href="#" class="list-group-item active">Online</a>
          <a href="#" class="list-group-item">John Egbert</a>
          <a href="#" class="list-group-item">Rose Lalonde</a>
          <a href="#" class="list-group-item">Jade Harley</a>
          <a href="#" class="list-group-item">Dave Strider</a>
        </div>
      </div>
      <div class="col-md-8">
        <h1 align="center">Chattr - Speak Your Mind</h1>

        <% @all_tweets.each do |tweet| %>
         <div class="panel panel-default">
           <div class="panel-heading">
             <h3 class="panel-title"><%=tweet.username %></h3>
           </div>
           <div class="panel-body">
             <%=tweet.message %>
           </div>
         </div>
         <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">

        <h3>Make chattr!</h3>
        <form method="POST" action="/new_tweet">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Username</span>
            <input type="text" name="username" class="form-control" placeholder="" aria-describedby="basic-addon1">
          </div>
        <br>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Message</span>
            <input type="text" name="message" class="form-control" placeholder="Speak your mind" aria-describedby="basic-addon1">
          </div>
        <br><br>
          <input type="submit" value="New Chattr" class="btn btn-primary">
        </form>

      </div>
      <div class="col-md-4"></div>
    </div>
  </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
